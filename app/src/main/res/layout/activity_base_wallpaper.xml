<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_wallpaper_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/FullscreenTheme"
    android:background="@color/fullScreenBackground"
    tools:context=".BaseWallpaperActivity"
    android:orientation="vertical">






    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/base_wallpaper_slidingpanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        app:umanoScrollableView="@id/base_Wallpaper_similiar_recyclerView"
        app:umanoPanelHeight="0dp"
        app:umanoShadowHeight="0dp"
        app:umanoDragView="@id/base_wallpaper_sliding_area">

        /*
            FIRST CHILD IS STARTS VISIBILE WHILE STARTING ACITIVITY
            SECOND CHILD IS INVISIBILE UNTIL SLIDING SCREEN
        */


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v4.view.ViewPager
                    android:id="@+id/base_wallpaper_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v4.view.ViewPager>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/base_wallpaper_left_area"
                            android:layout_width="50dp"
                            android:layout_height="200dp"
                            android:layout_gravity="left|center_vertical">

                            <ImageView
                                android:id="@+id/base_wallpaper_left_icon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/base_wallpaper_right_area"
                            android:layout_width="50dp"
                            android:layout_height="200dp"
                            android:layout_gravity="right|center_vertical">

                            <ImageView
                                android:id="@+id/base_wallpaper_right_icon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/base_wallpaper_bottom_area"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="bottom"
                            android:background="@color/fullScreenActionBarBackground">


                            <ImageView
                                android:id="@+id/base_wallpaper_download_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="33" />

                            <ImageView
                                android:id="@+id/base_wallpaper_corp_button"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="33" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="33" />
                        </LinearLayout>
                    </FrameLayout>

                </FrameLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/base_wallpaper_sliding_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:clickable="true">

            <TextView
                android:id="@+id/base_wallpaper_resolution_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:textAlignment="gravity"
                android:layout_marginRight="15dp"
                android:typeface="serif"
                android:textColor="@color/white"
                android:clickable="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="# Tags"
                    android:textSize="20dp"
                    android:typeface="serif"
                    android:padding="15dp"
                    android:textColor="@color/spring_green"/>
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/base_wallpaper_tags_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexWrap="wrap"
                    app:alignItems="stretch"
                    app:alignContent="stretch">

                </com.google.android.flexbox.FlexboxLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Similiar Wallpapers"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:padding="15dp"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/base_Wallpaper_similiar_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:isScrollContainer="true">
                    </android.support.v7.widget.RecyclerView>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/base_wallpaper_fragment_holder"
                        android:visibility="gone"></FrameLayout>

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</LinearLayout>