<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_wallpaper_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/FullscreenTheme"
    android:background="@color/fullScreenBackground"
    tools:context=".BaseWallpaperActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/base_wallpaper_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/base_wallpaper_left_area"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_gravity="left|center_vertical">

                <ImageView
                    android:id="@+id/base_wallpaper_left_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/base_wallpaper_right_area"
                android:layout_width="50dp"
                android:layout_height="200dp"
                android:layout_gravity="right|center_vertical">

                <ImageView
                    android:id="@+id/base_wallpaper_right_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/base_wallpaper_bottom_area"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@color/fullScreenActionBarBackground">


                <ImageView
                    android:id="@+id/base_wallpaper_download_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="33" />

                <ImageView
                    android:id="@+id/base_wallpaper_corp_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="33" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="33" />
            </LinearLayout>
        </FrameLayout>

    </FrameLayout>


</FrameLayout>