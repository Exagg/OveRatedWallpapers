<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.slice.wallpapers.CircleProgressBar
        android:id="@+id/base_wallpaper_circleProgressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        app:progressValue="0"
        app:progressbarPercentageColor="@color/CircleLoadingBarPercentageColor"
        app:progressBarThickness="2dp"
        app:progressBarResponsibleObject="@+id/base_wallpaper_main_image"
        />
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/base_wallpaper_main_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>